<%- include("partials/header") %>

<div class="container pt-5 pb-5 mt-5">
    <div class="row">
        <div class="col-lg-8 my-5 mx-auto py-4 shadow-effect main-background">
            <div class="input-group col col-12">
            <h5 class="mb-3 text-dark pb-1 open-sans-font">Send Us a Message!</h5>
        </div>
        <form class="contact-form">
            <div class="input-group">
                <div class="form-group col col-12">
                <input type="text" name="name" class="form-control" placeholder="Your Name" maxlength="1024" id="form-name" required>
            </div>

            <div class="input-group">
                <div class="form-group col col-12">
                <% if (user && user.email){ %>
                    <input type="email" name="email" class="form-control" aria-describedby="emailHelp" placeholder="Your Email Address" value="<%= user.email %>" maxlength="256" id="form-email" required> 
                <% }else{ %>        
                    <input type="email" name="email" class="form-control" aria-describedby="emailHelp" placeholder="Your Email Address" maxlength="256" id="form-email" required> 
                <% } %>        
            </div>

            <div class="input-group mb-3 col col-12">
                <textarea class="form-control" name="message" rows="6" maxlength="5096" placeholder="Your Message" id="form-message" required></textarea>
            </div>

            <div class="input-group col col-12">
                <button type="submit" class="btn btn-secondary btn-block">Submit</button>
            </div>
        </form>
    </div>
   </div>
  </div>
</div>

<%- include("partials/footer") %>