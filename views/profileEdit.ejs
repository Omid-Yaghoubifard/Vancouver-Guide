<%- include("partials/header") %>

<div class="container pt-5 pb-5 mt-5">
  <div class="row">
    <div class="col-sm-10 col-md-8 col-lg-6 col-xl-5 m-auto">
      <h3 class="mb-3 text-dark pb-1">Edit Your Profile!</h3>

      <form method="POST" action="/profile">
          <div class="form-group">
            <input type="email" name="email" class="form-control" aria-describedby="emailHelp" placeholder="<%= user.email %>"> 
          </div>
          <div class="form-group">
            <input type="text" name="username" class="form-control" placeholder="<%= user.username %>">
          </div>
          <div class="form-group">
            <input type="password" name="password" class="form-control" placeholder="Change your password" minlength="8">
          </div>
          <div class="form-group">
              <input type="password" name="password2" class="form-control" placeholder="Confirm your new password" minlength="8">
          </div>
          <button type="submit" class="btn btn-dark btn-block">Submit</button>
          <a href="/profile" class="btn btn-secondary btn-block">Cancel</a>
        </form>
      </div>
    </div>
</div>

<%- include("partials/footer") %>