<%- include("partials/header") %>

<div class="container mt-5 pb-5 pt-5">
    <div class="row my-5">
        <div class="shadow-effect main-background py-4 col-sm-10 col-md-8 col-lg-6 col-xl-5 m-auto open-sans-font">
            <h5 class="mb-4 text-dark open-sans-font">Would you like to delete your post?</h5>
            <div>
                <form method="POST" action="/index/show/<%= post._id %>?_method=DELETE">
                    <button type="submit" class="btn btn-dark btn-block mb-2">Delete</button>
                </form>
                <a class="btn btn-secondary btn-block" href="/index/show/<%= post._id %>">Cancel</a>
            </div>
        </div>
    </div>
</div>

<%- include("partials/footer") %>