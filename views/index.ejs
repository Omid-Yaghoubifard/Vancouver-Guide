<%- include("partials/header") %>

<div class="container pt-5 mt-5 mb-3">
    <% if ( message1.length > 0 ) { %>
        <p class="fadeOutItems text-secondary mb-4"><strong><%= message1 %></strong></p>
    <% } %>
    <% if ( message2.length > 0 ) { %>
        <p class="fadeOutItems text-secondary mb-4"><strong><%= message2 %></strong></p>
    <% } %>
    <% if ( message3.length > 0 ) { %>
        <p class="fadeOutItems text-secondary mb-4"><strong><%= message3 %></strong></p>
    <% } %>
    <% if ( message4.length > 0 ) { %>
        <p class="fadeOutItems text-secondary mb-4"><strong><%= message4 %></strong></p>
    <% } %>
    <% if ( message5.length > 0 ) { %>
        <p class="fadeOutItems text-secondary mb-4"><strong><%= message5 %></strong></p>
    <% } %>
    <% if ( message6.length > 0 ) { %>
        <p class="fadeOutItems text-secondary mb-4"><strong><%= message6 %></strong></p>
    <% } %>
    <% if ( message7.length > 0 ) { %>
        <p class="fadeOutItems text-secondary mb-4"><strong><%= message7 %></strong></p>
    <% } %>

    <div class="row">

    <% posts.forEach(function(post){ %>

        <div class="col-sm-6 col-lg-4 mb-5 very-small">
            <div class="card-deck">
                <div class="card">
                <a href="/index/show/<%= post._id %>"><img class="card-img card-img-top" src="<%= post.image %>" alt="<%= post.title %>"></a>
                <div class="card-body">
                    <h5 class="card-title"><%= post.title %></h5>
                    <p class="card-text"><%= post.body.slice(0,100) %> ...</p>
                    <a href="/index/show/<%= post._id %>" class= "btn btn-outline-success">Read more</a>
                </div>
                </div>
            </div>
        </div>

    <% }); %>
    
    </div>

    <% if (pages > 1) { %>
        <ul class="pagination text-center">
            <% if (current == 1) { %>
                <li class="disabled"><a>First</a></li>
            <% } else { %>
                <li><a href="/index/1">First </a></li>
            <% } %>
            <% let i = (Number(current) > 5 ? Number(current) - 4 : 1) %>
            <% if (i !== 1) { %>
                <li class="disabled"><a>...</a></li>
            <% } %>
            <% for (; i <= (Number(current) + 4) && i <= pages; i++) { %>
                <% if (i == current) { %>
                    <li class="active"><a><%= i %></a></li>
                <% } else { %>
                    <li><a href="/index/<%= i %>"><%= i %></a></li>
                <% } %>
                <% if (i == Number(current) + 4 && i < pages) { %>
                    <li class="disabled"><a>...</a></li>
                <% } %>
            <% } %>
            <% if (current == pages) { %>
                <li class="disabled"><a> Last</a></li>
            <% } else { %>
                <li><a href="/index/<%= pages %>"> Last</a></li>
            <% } %>
        </ul>
    <% } %>

</div>

<%- include("partials/footer") %>