<%- include("partials/header") %>

<div class="container mt-5 pt-5">
    <div class="row">

    <% posts.forEach(post =>{ %>

        <div class="col-sm-6 col-lg-4 my-5 very-small">
            <div class="card-deck">
                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title"><%= post.title %></h5>
                        <p class="card-text"><%= post.body.slice(0,100) %> ...</p>
                        <a target="_blank" href="/index/show/<%= post._id %>" class= "btn btn-outline-success">Read more</a>
                    </div>
                </div>
            </div>
        </div>

    <% }); %>
    </div>
</div>

<%- include("partials/footer") %>