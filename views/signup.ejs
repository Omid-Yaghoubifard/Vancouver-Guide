<%- include("partials/header") %>

<div class="container pt-5 pb-5 mt-5">

  <% messages.forEach(message =>{ %>
    <% if (typeof message === "object" && message.length) { %>
        <p class="fade-out-items text-secondary mb-4 open-sans-font"><%= message %></p>
    <% } %>
  <% }) %>

  <div class="row">
    <div class="col-lg-8 my-5 mx-auto py-4 shadow-effect main-background">
      <div class="input-group col col-12">
        <h5 class="mb-3 text-dark pb-1 open-sans-font">Sign Up Now!</h5>
      </div>

      <form method="POST" action="/signup">
        <div class="input-group">
          <div class="form-group col col-12">
            <input type="email" name="email" class="form-control" aria-describedby="emailHelp" placeholder="Enter your email" required> 
          </div>
        </div>

        <div class="input-group">
          <div class="form-group col col-12">
            <input type="text" name="username" class="form-control" placeholder="Choose a username" minlength="3" maxlength="30" required>
          </div>
        </div>

        <div class="input-group">
          <div class="form-group col col-12">
            <input type="password" name="password" class="form-control" placeholder="Enter your password" minlength="8" maxlength="256" required>
          </div>
        </div>

        <div class="input-group">
          <div class="form-group col col-12">
            <input type="password" name="password2" class="form-control" placeholder="Confirm your password" minlength="8" maxlength="256" required>
          </div>
        </div>

        <div class="form-group mt-1 mb-5 col">
          <div class="form-check">
            <input class="form-check-input" name="checkbox" type="checkbox" id="gridCheck" required>
            <label class="form-check-label" for="gridCheck">
                <span>I have read and agree to the <a target="_blank" href="/privacy">Privacy Policy</a> and the <a target="_blank" href="/terms">Terms and Conditions</a>.</span>
            </label>
          </div>
        </div>
        <div class="input-group col col-12">
          <button type="submit" class="btn btn-secondary btn-block">SIGN UP</button>
        </div>
        <div class="input-group col col-12">
          <p class="mt-3 text-dark open-sans-font">Have an account? <a href="/login">Log in!</a></p>
        </div>
      </form>
    </div>
  </div>
</div>

<%- include("partials/footer") %>